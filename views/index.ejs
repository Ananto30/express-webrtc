<!DOCTYPE html>
<html>
  <head>
    <script
      type="text/javascript"
      src="https://cdn.scaledrone.com/scaledrone.min.js"
    ></script>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
      body {
        display: flex;
        flex-direction: column;
        height: 100vh;
        margin: 0;
        align-items: center;
        justify-content: center;
        padding: 0;
        font-family: "Roboto", sans-serif;
        background-color: #f0f2f5;
        color: #333;
      }

      #remoteVideo,
      #localVideo {
        background-color: black; /* Set background color to black */
      }

      #remoteVideo {
        width: 1280px;
        height: 720px;
        margin: 20px 0;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      }

      #localVideo {
        position: fixed;
        width: 320px;
        height: 180px;
        bottom: 20px;
        right: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      }

      .copy {
        position: fixed;
        top: 20px;
        left: 50%;
        transform: translateX(-50%);
        font-size: 16px;
        color: rgba(0, 0, 0, 0.5);
      }

      .controls {
        display: flex;
        gap: 10px;
        position: fixed;
        bottom: 20px;
        left: 50%;
        transform: translateX(-50%);
      }

      .button {
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        background-color: #007bff;
        color: white;
        cursor: pointer;
        font-size: 16px;
        transition: background-color 0.3s;
      }

      .button:hover {
        background-color: #0056b3;
      }

      @media (max-width: 768px) {
        #remoteVideo {
          width: 100%;
          height: auto;
        }

        #localVideo {
          width: 160px;
          height: 90px;
          bottom: 10px;
          right: 10px;
        }

        .copy {
          font-size: 14px;
        }

        .button {
          padding: 8px 16px;
          font-size: 14px;
        }
      }

      @media (max-width: 480px) {
        #localVideo {
          width: 120px;
          height: 68px;
        }

        .copy {
          font-size: 12px;
        }

        .button {
          padding: 6px 12px;
          font-size: 12px;
        }
      }
    </style>
  </head>
  <body>
    <div class="copy" id="message">Welcome to the WebRTC Demo</div>
    <video id="localVideo" muted></video>
    <video id="remoteVideo"></video>
    <div class="controls">
      <!-- <button class="button" onclick="startVideo()">Start Video</button>
      <button class="button" onclick="stopVideo()">Stop Video</button> -->
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script src="/javascripts/script.js"></script>
    <script>
      var local = document.getElementById("localVideo");
      var remote = document.getElementById("remoteVideo");
      var messageDiv = document.getElementById("message");

      function startVideo() {
        local.play();
      }

      function stopVideo() {
        local.pause();
      }
    </script>
  </body>
</html>
